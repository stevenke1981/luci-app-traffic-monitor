#!/bin/sh /etc/rc.common
# /etc/init.d/trafficmon

START=99
STOP=10

USE_PROCD=1
PROG=/usr/bin/trafficmon-daemon

start_service() {
    # 創建數據目錄
    mkdir -p /tmp/trafficmon
    
    # 啟用 dnsmasq 日誌（如果不使用 nDPI）
    if ! iptables -m ndpi --help >/dev/null 2>&1; then
        # 配置 dnsmasq 記錄查詢
        uci set dhcp.@dnsmasq[0].logqueries='1'
        uci commit dhcp
        /etc/init.d/dnsmasq restart
    fi
    
    # 啟用 conntrack
    modprobe nf_conntrack
    
    procd_open_instance
    procd_set_param command $PROG
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

stop_service() {
    killall trafficmon-daemon 2>/dev/null
}

reset() {
    # 重置統計數據
    rm -f /tmp/trafficmon/stats.json
    
    # 重置 iptables 計數器
    iptables -Z TRAFFICMON 2>/dev/null
    
    logger -t trafficmon "Statistics reset"
}

service_triggers() {
    procd_add_reload_trigger "trafficmon"
}
